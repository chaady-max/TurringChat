# OpenAI API Key (optional - uses local fallback bot if not set)
OPENAI_API_KEY=

# LLM Configuration
LLM_MODEL=gpt-4o-mini
LLM_TIMEOUT_SECONDS=10
LLM_TEMPERATURE=0.85

# Humanization settings
LLM_MAX_WORDS=18
HUMANIZE_TYPO_RATE=0.22
HUMANIZE_MAX_TYPOS=2
HUMANIZE_MIN_DELAY=0.8
HUMANIZE_MAX_DELAY=2.5

# Game Configuration
ROUND_LIMIT_SECS=300
TURN_LIMIT_SECS=30
H2H_PROB=0.5
MATCH_WINDOW_SECS=10

# CORS and Redis
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
REDIS_URL=redis://localhost:6379/0

# Application
APP_ENV=dev
APP_VERSION=2
